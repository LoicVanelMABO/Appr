<p style="color: green"><%= notice %></p>

<h1>Cars</h1>

<div id="cars">
  <% @cars.each do |car| %>
    <%= render car %>
    <p>
      <%= link_to "Show this car", car %>
    </p>
  <% end %>
</div>

<%= link_to "New car", new_car_path %>

#FLASH----
<% flash.each do |name, msg| -%>
  <%= content_tag :dv, msg, class: name %>
<% end -%>

<% if flash[:just_signed_up] %>
  <p class="welcome">Welcome to our site!</p>
<% end %>
